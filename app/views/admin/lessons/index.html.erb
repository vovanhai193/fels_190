<title><%= t :lessons %></title>
<h3><%= t :lessons %></h3>
<% if @lessons.any? %>
  <table class="table table-hover">
    <tr>
      <th><%= t :lessons %></th>
      <th><%= t :author %></th>
      <th><%= t :status %></th>
      <th></th>
    </tr>
    <%= render @lessons %>
  </table>
  <div class="text-center">
    <%= will_paginate @lessons %>
  </div>
<% else %>
  <%= t :no_items_found %>
<% end %>
